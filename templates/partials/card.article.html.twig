<div class="col-xl-4 col-lg-4 col-md-8 col-10 m-auto text-center">

    <div class="card bg-light my-5 shadow ">
        <h3 class="card-header">{{article.title | title}}</h3>
        <img height="250px" width="250px" class="mx-auto rounded-circle border border-success m-2" src="{{article.image}}" alt="Card image">
        <div class="card-body">
          <p class="card-text">{{article.intro}}</p>
          <a href="{{path("article_show",{id:article.id})}}" class="btn btn-primary rounded">Lire la suite</a>
          <div class="my-3"> écrit par <br/>             
              <a href="{{path("user_show",{id:article.author.id})}}" class="card-link">{{article.author.firstname}} {{article.author.lastname}}</a>
          </div>
          <div class="my-1"> dans la catégorie <br/>             
            <a href="{{path("app_category_show",{id:article.category.id})}}" class="card-link">{{article.category.categorytitle}}</a>
        </div>
        </div>
        <div class="card-footer text-muted">
          le {{article.createdAt | date("d/m/Y à H:i ")}}
        </div>
    </div>
    {{ dump(article) }} 
</div>